<p id="notice"><%= notice %></p>

<h1>Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Order - Customer Name</th>
      <th>Menu Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order.customer_name %></td>
        <td><%= order_item.menu_item.name %></td>
        <td><%= link_to 'Show', order_order_item_path(order_item.order_id, id: order_item.id) %></td>
        <td><%= link_to 'Edit', edit_order_order_item_path(order_item.order_id, id: order_item.id) %></td>
        <td><%= link_to 'Destroy', order_order_item_path(order_item.order_id, id: order_item.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

